{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build file",
            "command": "Location to Compiler\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                "${workspaceFolder}\\*.cpp",
                "-o",
                "${fileDirname}\\main.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Create New Terminal",
            "type": "process",
            "command": "${command:workbench.action.terminal.new}",
            "problemMatcher": []
        },
        {
            "label": "All Tasks",
            "dependsOrder": "sequence",
            "dependsOn": [
                "C/C++: g++.exe build file",
                "Create New Terminal"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}